<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hotyi.hotyi.fragment.MyConversationFragment">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:id="@+id/conversation_search"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="35dip">
        <LinearLayout
            android:background="@color/bright_gray_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:padding="3dip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:scaleType="fitCenter"
                android:src="@mipmap/search_hui_3x"/>

        </LinearLayout>
        <TextView
            android:gravity="center"
            android:background="@null"
            android:text="搜索"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray"></View>

    <FrameLayout
        android:id="@+id/fragment_conversation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>
