<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context="com.hotyi.hotyi.activity.MyAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="@color/darkblue"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="53dip"
            android:gravity="center_horizontal|bottom"
            android:text="我的账户"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dip"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="15dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="ID"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/my_account_id"
                android:layout_width="0dip"
                android:text="123456878"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:gravity="center_vertical|right"
                android:layout_marginRight="35dip"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="15dip"
            android:background="@color/gray"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="15dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="注册手机号"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/my_account_phone"
                android:layout_width="0dip"
                android:text="123456878"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:gravity="center_vertical|right"
                android:layout_marginRight="35dip"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="15dip"
            android:background="@color/gray"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="15dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="名字"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/my_account_name"
                android:layout_width="0dip"
                android:text="123456878"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:gravity="center_vertical|right"
                android:layout_marginRight="5dip"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="15dip"
                android:layout_height="match_parent"
                android:background="@mipmap/rightarrow"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="15dip"
            android:background="@color/gray"></View>
        <LinearLayout
            android:id="@+id/my_account_password"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="15dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="修改密码"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dip"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:gravity="center_vertical|right"
                android:layout_marginRight="5dip"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="15dip"
                android:layout_height="match_parent"
                android:background="@mipmap/rightarrow"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="15dip"
            android:background="@color/gray"></View>
        <LinearLayout
            android:id="@+id/my_account_sex_click"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="15dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="性别"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/my_account_sex"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="123456878"
                android:textColor="@color/blue"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="15dip"
                android:layout_height="match_parent"
                android:background="@mipmap/rightarrow"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="15dip"
            android:background="@color/gray"></View>
        <Button
            android:layout_width="match_parent"
            android:layout_marginTop="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginLeft="20dip"
            android:text="退出"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_height="40dip"
            android:background="@drawable/login_btn_shape"/>
    </LinearLayout>


</LinearLayout>
