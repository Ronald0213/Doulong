<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.hotyi.hotyi.fragment.ContactsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@color/bright_gray"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:background="@mipmap/search_hui_3x" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="45dip"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/dark_gray"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contacts_guild"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="5dip"
            android:background="@mipmap/contact_gonghui_3x" />

        <TextView
            android:layout_width="60dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:gravity="center_vertical"
            android:text="公会"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/contacts_guild_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dip"
            android:gravity="right|center_vertical"
            android:text="0"

            android:textColor="@color/gray"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="15dip"
        android:background="@color/gray"></View>

    <LinearLayout
        android:id="@+id/contacts_group"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="5dip"
            android:background="@mipmap/contact_qunliao_3x" />

        <TextView
            android:layout_width="60dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:gravity="center_vertical"
            android:text="群聊"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/contacts_group_numm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dip"
            android:gravity="right|center_vertical"
            android:text="0"

            android:textColor="@color/gray"
            android:textSize="20sp" />
    </LinearLayout>

    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@color/bright_gray"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dip"
                android:gravity="center_vertical"
                android:text="官方"
                android:textColor="@color/dark_gray"
                android:textSize="16sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/contacts_official_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"></ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@color/bright_gray"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dip"
                android:gravity="center_vertical"
                android:text="逗友"
                android:textColor="@color/dark_gray"
                android:textSize="16sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/contacts_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"></ListView>
    </LinearLayout>
    <!--</ScrollView>-->
        </LinearLayout>
    </ScrollView>

</LinearLayout>
