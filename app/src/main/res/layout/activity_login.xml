<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_marginTop="120dip"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:src="@mipmap/logo" />
    </LinearLayout>

    <EditText
        android:id="@+id/edt_phone_num"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:gravity="center_vertical"
        android:layout_marginLeft="80dip"
        android:layout_marginRight="80dip"
        android:layout_marginTop="30dip"
        android:hint="@string/print_phone_num" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="80dip"
        android:password="true"
        android:layout_marginRight="80dip"
        android:layout_marginTop="5dip"
        android:gravity="center_vertical"
        android:hint="@string/print_password_num" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="80dip"
        android:layout_marginRight="80dip"
        android:layout_marginTop="40dip"
        android:background="@drawable/login_btn_shape"
        android:text="@string/login"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_marginTop="5dip"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_forget_password"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_marginLeft="80dip"
            android:layout_height="40dip"
            android:layout_marginRight="40dip"
            android:gravity="left|center_vertical"
            android:textColor="#33CCFF"
            android:text="@string/foget_password"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_regist"
            android:layout_marginRight="80dip"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textColor="#33CCFF"
            android:layout_height="40dip"
            android:gravity="center_vertical|right"
            android:text="@string/regist_id"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginTop="30dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="80dip"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgbtn_qq"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="3"
                android:background="@mipmap/login_qq_2x" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:text="QQ" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="80dip"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgbtn_weibo"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="3"
                android:background="@mipmap/login_weibo_2x" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:text="微博" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="80dip"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgbtn_weixin"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="3"
                android:background="@mipmap/login_weixin_2x" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:text="微信" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
