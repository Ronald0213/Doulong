<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageButton
        android:layout_gravity="left|top"
        android:id="@+id/regist_finally_imgbtn_back"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="30dip"
        android:background="@mipmap/login_back_2x"></ImageButton>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:gravity="center"
        android:layout_marginTop="70dip"
        android:orientation="vertical">

        <ImageView
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:src="@mipmap/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dip"
        android:layout_marginRight="60dip"
        android:layout_marginTop="40dip"
        android:orientation="vertical">

        <EditText
            android:id="@+id/regist_finally_edt_name"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="19"
            android:textColor="@color/black"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入用户名"
            android:lines="1"
            android:maxLines="1" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="5dip"
            android:layout_weight="19">

            <EditText
                android:id="@+id/regist_finally_edt_sex"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:enabled="false"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请选择性别"
                android:maxLines="1" />

            <Button
                android:id="@+id/regist_finally_nan"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_marginBottom="2dip"
                android:background="@drawable/gray_corners_btn"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:text="男"/>
            <Button
                android:id="@+id/regist_finally_nv"
                android:layout_marginLeft="10dip"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_marginBottom="2dip"
                android:background="@drawable/gray_corners_btn"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/gray"
                android:text="女"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black">

        </View>

        <EditText
            android:id="@+id/regist_finally_edt_password"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="5dip"
            android:layout_weight="19"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="numberPassword"
            android:lines="1"
            android:maxLines="1" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black">

        </View>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black">

        </View>

    </LinearLayout>

    <Button
        android:id="@+id/regist_finally_btn_next"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="60dip"
        android:layout_marginRight="60dip"
        android:layout_marginTop="40dip"
        android:background="@drawable/login_btn_shape"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="24sp" />

</LinearLayout>
